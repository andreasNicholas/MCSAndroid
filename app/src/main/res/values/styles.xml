<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBg</item>
        <item name="colorPrimaryDark">@color/colorBg</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Base application theme. -->
    <style name="noActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorBg</item>
        <item name="colorPrimaryDark">@color/colorBg</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="fabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:backgroundTint">@color/colorBg</item>
        <item name="android:src">@drawable/ic_add_black_24dp</item>
    </style>

    <style name="tvIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:gravity">center|end</item>
        <item name="android:state_hovered">true</item>
    </style>

</resources>
